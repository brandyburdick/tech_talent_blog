

<h1>Listing Blog Posts</h1>

<div class="row"> 
  <% @blog_posts.each do |blog_post| %>
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <%= link_to blog_post do %>
            <h3 class="panel-title">
              <%= blog_post.title %>
            </h3>
          <% end %>
        </div>
        
        
        <div class="panel-body">
          <p>by <%= blog_post.user.username %></p>
          <p>
            <%= blog_post.blog_entry[0..275] %>...
            <%= link_to "[more]", blog_post %>
          </p>
        </div>

      </div>
    </div>
  <% end %>
</div>




<br>

<%= link_to 'New Blog post', new_blog_post_path, class: 'btn btn-primary' %>


