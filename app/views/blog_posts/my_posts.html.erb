
<div class="container show-view-wrapper">
	<center><h1>Welcome <%= current_user.username %>!</h1>
	<h2>Here are posts you've contributed:</h2></center>

	<div class="row">
		<% current_user.blog_posts.each do |blog_post| %>
			<div class="col-md-8 col-md-offset-2">
				<div class="panel panel-primary">
        <div class="panel-heading">
          <%= link_to blog_post do %>
            <h3 class="panel-title">
              <%= blog_post.title %>
            </h3>
          <% end %>
        </div>
        
        
        <div class="panel-body">
          <p>by <%= blog_post.user.username %></p>
          <p>
            <%= blog_post.blog_entry[0..275] %>...
            <%= link_to "[more]", blog_post %>
          </p>
        </div>

        <div class="panel-footer">
        	<%= link_to 'Edit', edit_blog_post_path(blog_post), class: 'btn btn-sm btn-warning' %>
        	<%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' %>
        </div>

      </div>	
			</div>		
		<% end %>
	</div>
</div>


