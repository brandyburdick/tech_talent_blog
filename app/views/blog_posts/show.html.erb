<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
	<div class="panel-heading">
		<%= @blog_post.title %>
	</div>
	<div class="panel-body">
		<p>by <%= @blog_post.author %></p>
		<p><%= @blog_post.blog_entry %></p>
	</div>	
	<div class="panel-footer"> 
		<%= link_to 'Edit', edit_blog_post_path(@blog_post), class: "btn btn-warning btn-sm" %>
	</div>
</div>
		
<div class="panel panel-success">
	<div class="panel-heading">
		Leave a Comment
	</div>
	<div class="panel-body">
		<%= render 'comments/form' %>
	</div>
</div>

<p>
	<ul>
		<% @blog_post.comments.each do |comment| %>
			<li>
				<p>On <%=  comment.created_at.stamp("Sunday, May 1, 2000 at 3:00 AM") %>, <strong><%= comment.author %></strong> said: </p>
				<p><%= comment.comment_entry %></p>
			</li>
		<% end %>
	</ul>
</p>



 

<%= link_to 'Back to Blog Listing', blog_posts_path, class: "btn btn-primary btn-sm" %>






